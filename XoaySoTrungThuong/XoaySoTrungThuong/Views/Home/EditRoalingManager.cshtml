@model RuleToPlay
@{
    ViewBag.Title = "Luật chơi";
}

<br />
<h2>@ViewBag.Title.</h2>
@{
    var c = (RuleToPlay)ViewBag.Rule;
}

@using (Html.BeginForm("EditRoalingManager", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
     <div class="form-group">
        <label class="col-md-2 control-label" for="PrizeNumber">Đợt quay thứ</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Stage, new { @class = "form-control", @Value = c.Stage })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="PrizeNumber">Lần quay thứ</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.RoundNumber, new { @class = "form-control", @Value = c.RoundNumber })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="PrizeNumber">Số giải thưởng</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PrizeNumber, new { @class = "form-control", @Value = c.PrizeNumber })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="PrizeNumber">Số khách mời trúng</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.GuessNumber, new { @class = "form-control", @Value = c.GuessNumber })
        </div>
        <input type="hidden" id="hdID" name="hdID" value="@c.ID_Rule" />
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Nhập" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
